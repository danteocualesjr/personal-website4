---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: "Literary Magazine Editorial",
    description: "Guest editor for the Spring 2025 issue of Inkwell Literary Magazine.",
    category: "Editorial",
    year: 2025,
  },
  {
    title: "Writing Workshop Series",
    description: "Six-week creative writing workshop on character development.",
    category: "Teaching",
    year: 2024,
  },
  {
    title: "Podcast: Stories Untold",
    description: "Exploring the craft of storytelling with authors and editors.",
    category: "Media",
    year: 2024,
  },
  {
    title: "Essay Collection",
    description: "Essays on the writing process published in literary journals.",
    category: "Writing",
    year: 2023,
  },
  {
    title: "Blue Mountain Residency",
    description: "Completed first draft of 'Echoes of Tomorrow' novel.",
    category: "Residency",
    year: 2023,
  },
  {
    title: "Community Reading Series",
    description: "Monthly reading series showcasing local writers.",
    category: "Community",
    year: 2022,
  }
];
---

<BaseLayout title="Portfolio - Your Name">
  <section class="page-header">
    <div class="container">
      <h1>Portfolio</h1>
      <p>Selected projects and creative work.</p>
    </div>
  </section>

  <section class="projects">
    <div class="container">
      <div class="project-list">
        {projects.map((project) => (
          <div class="project-item">
            <div class="project-meta">
              <span class="year">{project.year}</span>
              <span class="category">{project.category}</span>
            </div>
            <div class="project-content">
              <h2>{project.title}</h2>
              <p>{project.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="collab">
        <h2>Let's collaborate</h2>
        <p>Open to interesting projects and new ideas.</p>
        <a href="/about#contact" class="link-arrow">Get in touch</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-5xl) 0 var(--space-3xl);
  }
  
  .page-header h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
  }
  
  .page-header p {
    font-size: var(--text-lg);
  }
  
  .projects {
    padding-bottom: var(--space-4xl);
  }
  
  .project-list {
    max-width: 700px;
  }
  
  .project-item {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: var(--space-xl);
    padding: var(--space-xl) 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .project-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }
  
  .year {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .category {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .project-content h2 {
    font-size: var(--text-xl);
    font-family: var(--font-sans);
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }
  
  .project-content p {
    font-size: var(--text-sm);
    margin: 0;
  }
  
  /* Section */
  .section {
    padding: var(--space-4xl) 0;
    border-top: 1px solid var(--color-border);
  }
  
  .collab {
    max-width: 400px;
  }
  
  .collab h2 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-md);
  }
  
  .collab p {
    margin-bottom: var(--space-xl);
  }
  
  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
  }
  
  .link-arrow::after {
    content: 'â†’';
    transition: transform var(--duration) var(--ease);
  }
  
  .link-arrow:hover::after {
    transform: translateX(4px);
  }
  
  @media (max-width: 640px) {
    .project-item {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }
    
    .project-meta {
      flex-direction: row;
      gap: var(--space-md);
    }
  }
</style>
