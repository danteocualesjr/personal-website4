---
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = [
  {
    name: "open-source-tool",
    description: "A developer tool that helps teams ship faster.",
    tech: ["TypeScript", "Node.js"],
    stars: "2.4K",
    link: "https://github.com/yourhandle/project",
  },
  {
    name: "side-project-app",
    description: "A weekend project that does one thing well.",
    tech: ["Next.js", "Tailwind"],
    stars: "890",
    link: "https://github.com/yourhandle/project",
  },
  {
    name: "cli-utility",
    description: "Command-line tool for automating tasks.",
    tech: ["Rust"],
    stars: "456",
    link: "https://github.com/yourhandle/project",
  },
  {
    name: "api-wrapper",
    description: "A clean, typed API wrapper.",
    tech: ["TypeScript"],
    stars: "234",
    link: "https://github.com/yourhandle/project",
  },
  {
    name: "vscode-extension",
    description: "VS Code extension used by thousands.",
    tech: ["TypeScript"],
    stars: "1.2K",
    link: "https://github.com/yourhandle/project",
  },
  {
    name: "learning-project",
    description: "An experimental learning project.",
    tech: ["Go", "Docker"],
    stars: "178",
    link: "https://github.com/yourhandle/project",
  }
];
---

<BaseLayout title="Projects - Your Name">
  <section class="page-header">
    <div class="container">
      <h1>Projects</h1>
      <p>Open source and experiments.</p>
    </div>
  </section>

  <section class="projects">
    <div class="container">
      <div class="project-list">
        {projects.map((project) => (
          <a href={project.link} target="_blank" rel="noopener" class="project-item">
            <div class="project-main">
              <h2>{project.name}</h2>
              <p>{project.description}</p>
            </div>
            <div class="project-meta">
              <div class="tech">
                {project.tech.map(t => <span>{t}</span>)}
              </div>
              <span class="stars">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                {project.stars}
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="collab">
        <h2>Open to collaboration</h2>
        <p>Always interested in building something together.</p>
        <a href="https://github.com/yourhandle" target="_blank" rel="noopener" class="link-arrow">View GitHub</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-5xl) 0 var(--space-3xl);
  }
  
  .page-header h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
  }
  
  .page-header p {
    font-size: var(--text-lg);
  }
  
  .projects {
    padding-bottom: var(--space-4xl);
  }
  
  .project-list {
    max-width: 600px;
  }
  
  .project-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-xl);
    padding: var(--space-xl) 0;
    border-bottom: 1px solid var(--color-border);
    transition: padding var(--duration) var(--ease);
  }
  
  .project-item:hover {
    padding-left: var(--space-md);
  }
  
  .project-main h2 {
    font-family: monospace;
    font-size: var(--text-base);
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }
  
  .project-main p {
    font-size: var(--text-sm);
    margin: 0;
  }
  
  .project-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--space-sm);
    flex-shrink: 0;
  }
  
  .tech {
    display: flex;
    gap: var(--space-sm);
  }
  
  .tech span {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }
  
  .stars {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .stars svg {
    color: #FBBF24;
  }
  
  /* Section */
  .section {
    padding: var(--space-4xl) 0;
    border-top: 1px solid var(--color-border);
  }
  
  .collab {
    max-width: 400px;
  }
  
  .collab h2 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-md);
  }
  
  .collab p {
    margin-bottom: var(--space-xl);
  }
  
  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
  }
  
  .link-arrow::after {
    content: 'â†’';
    transition: transform var(--duration) var(--ease);
  }
  
  .link-arrow:hover::after {
    transform: translateX(4px);
  }
  
  @media (max-width: 640px) {
    .project-item {
      flex-direction: column;
      gap: var(--space-md);
    }
    
    .project-meta {
      flex-direction: row;
      align-items: center;
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
