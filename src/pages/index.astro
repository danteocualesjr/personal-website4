---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Your Name - Founder & Builder">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>
          <span class="hero-line">Building</span>
          <span class="hero-line accent">products</span>
          <span class="hero-line">that matter<span class="dot">.</span></span>
        </h1>
        <p class="hero-text">
          Startup founder and product builder. I turn ambitious ideas into 
          real businesses. Currently crafting the future of <em>technology</em>.
        </p>
        <div class="hero-actions">
          <a href="/about" class="btn-primary">
            About Me
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/books" class="btn-ghost">View Ventures</a>
        </div>
      </div>
      
      <div class="hero-decoration">
        <div class="glow"></div>
      </div>
    </div>
  </section>

  <section class="numbers">
    <div class="container">
      <div class="numbers-grid">
        <div class="number-item">
          <span class="number">3+</span>
          <span class="label">Companies Built</span>
        </div>
        <div class="divider"></div>
        <div class="number-item">
          <span class="number">$10M</span>
          <span class="label">Revenue Generated</span>
        </div>
        <div class="divider"></div>
        <div class="number-item">
          <span class="number">50K</span>
          <span class="label">Users Reached</span>
        </div>
        <div class="divider"></div>
        <div class="number-item">
          <span class="number">8+</span>
          <span class="label">Years Building</span>
        </div>
      </div>
    </div>
  </section>

  <section class="work">
    <div class="container">
      <div class="section-header">
        <span class="overline">What I Do</span>
        <h2>Selected Work</h2>
      </div>
      
      <div class="work-grid">
        <a href="/books" class="work-card large">
          <span class="card-number">01</span>
          <div class="card-content">
            <h3>Ventures</h3>
            <p>Companies I've founded and scaled from zero.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
        
        <a href="/fiction" class="work-card">
          <span class="card-number">02</span>
          <div class="card-content">
            <h3>Projects</h3>
            <p>Open source & experiments.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
        
        <a href="/blog" class="work-card">
          <span class="card-number">03</span>
          <div class="card-content">
            <h3>Writing</h3>
            <p>Thoughts & insights.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
        
        <a href="/portfolio" class="work-card">
          <span class="card-number">04</span>
          <div class="card-content">
            <h3>Portfolio</h3>
            <p>Creative & professional work.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  <section class="latest">
    <div class="container">
      <div class="section-header">
        <span class="overline">Latest</span>
        <h2>From the Blog</h2>
      </div>
      
      <div class="posts-list">
        <a href="/blog/finding-voice" class="post-row">
          <span class="post-date">Jan 15</span>
          <h3 class="post-title">Finding Your Voice as a Writer</h3>
          <span class="post-arrow">→</span>
        </a>
        <a href="/blog/morning-rituals" class="post-row">
          <span class="post-date">Jan 10</span>
          <h3 class="post-title">Morning Rituals for Creative Work</h3>
          <span class="post-arrow">→</span>
        </a>
        <a href="/blog/new-year-new-stories" class="post-row">
          <span class="post-date">Jan 5</span>
          <h3 class="post-title">New Year, New Stories</h3>
          <span class="post-arrow">→</span>
        </a>
      </div>
      
      <a href="/blog" class="view-all">
        View all posts
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </section>

  <section class="cta">
    <div class="container">
      <div class="cta-inner">
        <h2>Let's build something <em>great</em> together.</h2>
        <p>Looking for a co-founder, advisor, or collaborator? I'd love to chat.</p>
        <a href="/about#contact" class="btn-primary">
          Get in Touch
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: var(--space-4xl) 0;
    position: relative;
    overflow: hidden;
  }
  
  .hero-content {
    max-width: 900px;
    position: relative;
    z-index: 1;
  }
  
  .hero h1 {
    font-size: clamp(3rem, 10vw, var(--text-6xl));
    line-height: 0.95;
    margin-bottom: var(--space-xl);
  }
  
  .hero-line {
    display: block;
  }
  
  .hero-line.accent {
    color: var(--color-accent);
  }
  
  .dot {
    color: var(--color-accent);
  }
  
  .hero-text {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 500px;
    line-height: 1.7;
    margin-bottom: var(--space-2xl);
  }
  
  .hero-text em {
    color: var(--color-text);
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }
  
  .hero-decoration {
    position: absolute;
    top: 50%;
    right: -200px;
    transform: translateY(-50%);
    width: 600px;
    height: 600px;
    pointer-events: none;
  }
  
  .glow {
    width: 100%;
    height: 100%;
    background: var(--gradient-glow);
    filter: blur(60px);
    animation: float 6s ease-in-out infinite;
  }
  
  /* Buttons */
  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--color-accent);
    color: white;
    font-size: var(--text-sm);
    font-weight: 600;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-base);
  }
  
  .btn-primary:hover {
    background: var(--color-accent-hover);
    color: white;
    transform: translateY(-2px);
  }
  
  .btn-ghost {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: transparent;
    color: var(--color-text);
    font-size: var(--text-sm);
    font-weight: 600;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-base);
  }
  
  .btn-ghost:hover {
    border-color: var(--color-text);
    color: var(--color-text);
  }
  
  /* Numbers */
  .numbers {
    padding: var(--space-3xl) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }
  
  .numbers-grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .number-item {
    text-align: center;
  }
  
  .number {
    display: block;
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    color: var(--color-text);
    line-height: 1;
  }
  
  .number-item .label {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-sm);
  }
  
  .divider {
    width: 1px;
    height: 60px;
    background: var(--color-border);
  }
  
  /* Sections */
  .section-header {
    margin-bottom: var(--space-2xl);
  }
  
  .overline {
    display: block;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-sm);
  }
  
  .section-header h2 {
    font-size: var(--text-4xl);
  }
  
  /* Work */
  .work {
    padding: var(--space-4xl) 0;
  }
  
  .work-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }
  
  .work-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: var(--space-xl);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    min-height: 200px;
    transition: all var(--transition-base);
    overflow: hidden;
  }
  
  .work-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-accent);
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  .work-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
  }
  
  .work-card:hover::before {
    opacity: 0.05;
  }
  
  .work-card.large {
    grid-row: span 2;
    min-height: 420px;
  }
  
  .card-number {
    position: relative;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-serif);
  }
  
  .card-content {
    position: relative;
  }
  
  .card-content h3 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }
  
  .card-content p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }
  
  .card-arrow {
    position: absolute;
    top: var(--space-xl);
    right: var(--space-xl);
    color: var(--color-text-muted);
    transition: all var(--transition-base);
  }
  
  .work-card:hover .card-arrow {
    color: var(--color-accent);
    transform: translate(4px, -4px);
  }
  
  /* Latest */
  .latest {
    padding: var(--space-4xl) 0;
    background: var(--color-bg-secondary);
  }
  
  .posts-list {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--space-xl);
  }
  
  .post-row {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: var(--space-xl);
    align-items: center;
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .post-row:hover {
    padding-left: var(--space-md);
  }
  
  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .post-title {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }
  
  .post-row:hover .post-title {
    color: var(--color-accent);
  }
  
  .post-arrow {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
  }
  
  .post-row:hover .post-arrow {
    color: var(--color-accent);
    transform: translateX(4px);
  }
  
  .view-all {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
  }
  
  .view-all:hover {
    gap: var(--space-md);
  }
  
  /* CTA */
  .cta {
    padding: var(--space-4xl) 0;
  }
  
  .cta-inner {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-inner h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
  }
  
  .cta-inner h2 em {
    color: var(--color-accent);
  }
  
  .cta-inner p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: var(--space-3xl) 0;
    }
    
    .hero-decoration {
      display: none;
    }
    
    .numbers-grid {
      flex-wrap: wrap;
      gap: var(--space-xl);
    }
    
    .divider {
      display: none;
    }
    
    .number-item {
      width: 45%;
    }
    
    .work-grid {
      grid-template-columns: 1fr;
    }
    
    .work-card.large {
      grid-row: auto;
      min-height: 200px;
    }
    
    .post-row {
      grid-template-columns: 60px 1fr auto;
      gap: var(--space-md);
    }
  }
</style>
