---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Your Name">
  <section class="hero">
    <div class="container">
      <h1>Building products<br/>people <em>love</em></h1>
      <p class="intro">
        Startup founder and builder. I create products that solve real problems 
        and help businesses grow.
      </p>
      <div class="cta">
        <a href="/about" class="link-arrow">Learn more about me</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-header">
        <span class="label">Work</span>
      </div>
      
      <div class="work-list">
        <a href="/books" class="work-item">
          <div class="work-info">
            <h3>Ventures</h3>
            <p>Companies built from zero</p>
          </div>
          <span class="arrow">→</span>
        </a>
        
        <a href="/fiction" class="work-item">
          <div class="work-info">
            <h3>Projects</h3>
            <p>Open source & experiments</p>
          </div>
          <span class="arrow">→</span>
        </a>
        
        <a href="/portfolio" class="work-item">
          <div class="work-info">
            <h3>Portfolio</h3>
            <p>Selected creative work</p>
          </div>
          <span class="arrow">→</span>
        </a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-header">
        <span class="label">Writing</span>
        <a href="/blog" class="see-all">View all</a>
      </div>
      
      <div class="post-list">
        <a href="/blog/finding-your-voice" class="post-item">
          <time>Jan 15</time>
          <span class="post-title">Finding Your Voice as a Writer</span>
        </a>
        
        <a href="/blog/morning-rituals" class="post-item">
          <time>Jan 10</time>
          <span class="post-title">Morning Rituals for Creative Work</span>
        </a>
        
        <a href="/blog/new-year-new-stories" class="post-item">
          <time>Jan 5</time>
          <span class="post-title">New Year, New Stories</span>
        </a>
      </div>
    </div>
  </section>

  <section class="section cta-section">
    <div class="container">
      <h2>Let's work together</h2>
      <p>Looking for a collaborator or advisor? I'd love to hear from you.</p>
      <a href="/about#contact" class="link-arrow">Get in touch</a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: var(--space-5xl) 0;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }
  
  .hero h1 {
    font-size: clamp(var(--text-4xl), 8vw, var(--text-6xl));
    margin-bottom: var(--space-xl);
    line-height: 1.1;
  }
  
  .hero em {
    font-style: italic;
  }
  
  .intro {
    font-size: var(--text-lg);
    max-width: 480px;
    margin-bottom: var(--space-2xl);
  }
  
  .link-arrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    transition: gap var(--duration) var(--ease);
  }
  
  .link-arrow::after {
    content: '→';
    transition: transform var(--duration) var(--ease);
  }
  
  .link-arrow:hover::after {
    transform: translateX(4px);
  }
  
  /* Sections */
  .section {
    padding: var(--space-4xl) 0;
    border-top: 1px solid var(--color-border);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2xl);
  }
  
  .label {
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }
  
  .see-all {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    transition: color var(--duration) var(--ease);
  }
  
  .see-all:hover {
    color: var(--color-text);
  }
  
  /* Work List */
  .work-list {
    display: flex;
    flex-direction: column;
  }
  
  .work-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-xl) 0;
    border-bottom: 1px solid var(--color-border);
    transition: padding var(--duration) var(--ease);
  }
  
  .work-item:hover {
    padding-left: var(--space-md);
  }
  
  .work-item h3 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-xs);
  }
  
  .work-item p {
    font-size: var(--text-sm);
    margin: 0;
  }
  
  .work-item .arrow {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    transition: all var(--duration) var(--ease);
  }
  
  .work-item:hover .arrow {
    color: var(--color-text);
    transform: translateX(4px);
  }
  
  /* Post List */
  .post-list {
    display: flex;
    flex-direction: column;
  }
  
  .post-item {
    display: flex;
    align-items: baseline;
    gap: var(--space-xl);
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
    transition: padding var(--duration) var(--ease);
  }
  
  .post-item:hover {
    padding-left: var(--space-md);
  }
  
  .post-item time {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    min-width: 60px;
  }
  
  .post-title {
    color: var(--color-text);
    transition: color var(--duration) var(--ease);
  }
  
  .post-item:hover .post-title {
    color: var(--color-text-secondary);
  }
  
  /* CTA Section */
  .cta-section {
    text-align: center;
    padding: var(--space-5xl) 0;
  }
  
  .cta-section h2 {
    margin-bottom: var(--space-md);
  }
  
  .cta-section p {
    max-width: 400px;
    margin: 0 auto var(--space-xl);
  }
  
  @media (max-width: 640px) {
    .hero {
      min-height: auto;
      padding: var(--space-4xl) 0;
    }
    
    .work-item {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }
    
    .work-item .arrow {
      display: none;
    }
    
    .post-item {
      flex-direction: column;
      gap: var(--space-xs);
    }
  }
</style>
