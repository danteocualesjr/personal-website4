---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Your Name - Founder & Builder">
  <section class="hero">
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-grid"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <span class="badge-dot"></span>
          <span>Available for new projects</span>
        </div>
        <h1>
          <span class="hero-line" style="--delay: 0s">Building</span>
          <span class="hero-line accent" style="--delay: 0.1s">products</span>
          <span class="hero-line" style="--delay: 0.2s">that matter<span class="dot">.</span></span>
        </h1>
        <p class="hero-text">
          Startup founder and product builder. I turn ambitious ideas into 
          real businesses. Currently crafting the future of <em>technology</em>.
        </p>
        <div class="hero-actions">
          <a href="/about" class="btn-primary">
            <span>About Me</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/books" class="btn-ghost">
            <span>View Ventures</span>
          </a>
        </div>
        
        <div class="hero-scroll">
          <span>Scroll to explore</span>
          <div class="scroll-indicator">
            <div class="scroll-dot"></div>
          </div>
        </div>
      </div>
      
      <div class="hero-decoration">
        <div class="glow"></div>
        <div class="floating-shapes">
          <div class="shape shape-1"></div>
          <div class="shape shape-2"></div>
          <div class="shape shape-3"></div>
        </div>
      </div>
    </div>
  </section>

  <section class="numbers">
    <div class="container">
      <div class="numbers-grid">
        <div class="number-item">
          <span class="number">3+</span>
          <span class="label">Companies Built</span>
        </div>
        <div class="divider"></div>
        <div class="number-item">
          <span class="number">$10M</span>
          <span class="label">Revenue Generated</span>
        </div>
        <div class="divider"></div>
        <div class="number-item">
          <span class="number">50K</span>
          <span class="label">Users Reached</span>
        </div>
        <div class="divider"></div>
        <div class="number-item">
          <span class="number">8+</span>
          <span class="label">Years Building</span>
        </div>
      </div>
    </div>
  </section>

  <section class="work">
    <div class="container">
      <div class="section-header">
        <span class="overline">What I Do</span>
        <h2>Selected Work</h2>
        <p class="section-desc">Explore my ventures, projects, and creative work</p>
      </div>
      
      <div class="work-grid">
        <a href="/books" class="work-card large">
          <div class="card-glow"></div>
          <span class="card-number">01</span>
          <div class="card-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <div class="card-content">
            <h3>Ventures</h3>
            <p>Companies I've founded and scaled from zero to exit.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
        
        <a href="/fiction" class="work-card">
          <div class="card-glow"></div>
          <span class="card-number">02</span>
          <div class="card-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <div class="card-content">
            <h3>Projects</h3>
            <p>Open source & experiments.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
        
        <a href="/blog" class="work-card">
          <div class="card-glow"></div>
          <span class="card-number">03</span>
          <div class="card-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 19l7-7 3 3-7 7-3-3z"/>
              <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
              <path d="M2 2l7.586 7.586"/>
            </svg>
          </div>
          <div class="card-content">
            <h3>Writing</h3>
            <p>Thoughts & insights.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
        
        <a href="/portfolio" class="work-card">
          <div class="card-glow"></div>
          <span class="card-number">04</span>
          <div class="card-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
              <circle cx="8.5" cy="8.5" r="1.5"/>
              <path d="M21 15l-5-5L5 21"/>
            </svg>
          </div>
          <div class="card-content">
            <h3>Portfolio</h3>
            <p>Creative & professional work.</p>
          </div>
          <span class="card-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  <section class="latest">
    <div class="container">
      <div class="section-header">
        <span class="overline">Latest</span>
        <h2>From the Blog</h2>
      </div>
      
      <div class="posts-list">
        <a href="/blog/finding-voice" class="post-row">
          <span class="post-date">Jan 15</span>
          <h3 class="post-title">Finding Your Voice as a Writer</h3>
          <span class="post-arrow">→</span>
        </a>
        <a href="/blog/morning-rituals" class="post-row">
          <span class="post-date">Jan 10</span>
          <h3 class="post-title">Morning Rituals for Creative Work</h3>
          <span class="post-arrow">→</span>
        </a>
        <a href="/blog/new-year-new-stories" class="post-row">
          <span class="post-date">Jan 5</span>
          <h3 class="post-title">New Year, New Stories</h3>
          <span class="post-arrow">→</span>
        </a>
      </div>
      
      <a href="/blog" class="view-all">
        View all posts
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </section>

  <section class="cta">
    <div class="container">
      <div class="cta-inner">
        <div class="cta-bg"></div>
        <div class="cta-content">
          <h2>Let's build something <em>great</em> together.</h2>
          <p>Looking for a co-founder, advisor, or collaborator? I'd love to chat.</p>
          <a href="/about#contact" class="btn-primary btn-large">
            <span>Get in Touch</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: var(--space-4xl) 0 var(--space-3xl);
    position: relative;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  
  .hero-gradient {
    position: absolute;
    top: -50%;
    right: -30%;
    width: 100%;
    height: 150%;
    background: radial-gradient(ellipse at center, var(--color-accent-light) 0%, transparent 60%);
    opacity: 0.6;
    animation: float 8s ease-in-out infinite;
  }
  
  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(var(--color-border) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-border) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.3;
    mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 0%, transparent 70%);
  }
  
  .hero-content {
    max-width: 900px;
    position: relative;
    z-index: 1;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-xs) var(--space-md) var(--space-xs) var(--space-sm);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    animation: fadeInDown 0.6s ease forwards;
  }
  
  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-success);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }
  
  .hero h1 {
    font-size: clamp(3rem, 10vw, var(--text-6xl));
    line-height: 0.95;
    margin-bottom: var(--space-xl);
    letter-spacing: -0.03em;
  }
  
  .hero-line {
    display: block;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transform: translateY(40px);
  }
  
  .hero-line.accent {
    background: var(--gradient-accent);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .dot {
    color: var(--color-accent);
    -webkit-text-fill-color: var(--color-accent);
    display: inline-block;
    animation: pulse 3s ease-in-out infinite;
  }
  
  .hero-text {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 520px;
    line-height: 1.7;
    margin-bottom: var(--space-2xl);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }
  
  .hero-text em {
    color: var(--color-text);
    font-style: italic;
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }
  
  .hero-scroll {
    position: absolute;
    bottom: -6rem;
    left: 0;
    display: flex;
    align-items: center;
    gap: var(--space-md);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    animation: fadeIn 1s ease forwards;
    animation-delay: 1s;
    opacity: 0;
  }
  
  .scroll-indicator {
    width: 24px;
    height: 40px;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-full);
    position: relative;
  }
  
  .scroll-dot {
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--color-accent);
    border-radius: var(--radius-full);
    animation: scrollDown 2s ease-in-out infinite;
  }
  
  @keyframes scrollDown {
    0%, 100% { 
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    50% { 
      opacity: 0.3;
      transform: translateX(-50%) translateY(16px);
    }
  }
  
  .hero-decoration {
    position: absolute;
    top: 50%;
    right: -100px;
    transform: translateY(-50%);
    width: 600px;
    height: 600px;
    pointer-events: none;
  }
  
  .glow {
    width: 100%;
    height: 100%;
    background: var(--gradient-glow);
    filter: blur(80px);
    animation: float 8s ease-in-out infinite;
  }
  
  .floating-shapes {
    position: absolute;
    inset: 0;
  }
  
  .shape {
    position: absolute;
    border-radius: 50%;
    background: var(--gradient-accent);
    opacity: 0.1;
    filter: blur(40px);
  }
  
  .shape-1 {
    width: 200px;
    height: 200px;
    top: 10%;
    right: 20%;
    animation: float 6s ease-in-out infinite;
  }
  
  .shape-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 10%;
    animation: float 8s ease-in-out infinite reverse;
  }
  
  .shape-3 {
    width: 100px;
    height: 100px;
    top: 40%;
    right: 40%;
    animation: float 5s ease-in-out infinite;
    animation-delay: 1s;
  }
  
  /* Buttons */
  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--gradient-accent);
    background-size: 200% auto;
    color: white;
    font-size: var(--text-sm);
    font-weight: 600;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
  }
  
  .btn-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transform: translateX(-100%);
    transition: transform 0.5s ease;
  }
  
  .btn-primary:hover {
    background-position: right center;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(255, 107, 53, 0.4);
  }
  
  .btn-primary:hover::before {
    transform: translateX(100%);
  }
  
  .btn-primary svg {
    transition: transform var(--transition-fast);
  }
  
  .btn-primary:hover svg {
    transform: translateX(3px);
  }
  
  .btn-primary.btn-large {
    padding: var(--space-lg) var(--space-2xl);
    font-size: var(--text-base);
  }
  
  .btn-ghost {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--color-bg-secondary);
    color: var(--color-text);
    font-size: var(--text-sm);
    font-weight: 600;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }
  
  .btn-ghost::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-accent-light);
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  .btn-ghost span {
    position: relative;
    z-index: 1;
  }
  
  .btn-ghost:hover {
    border-color: var(--color-accent);
    color: var(--color-text);
    transform: translateY(-2px);
  }
  
  .btn-ghost:hover::before {
    opacity: 1;
  }
  
  /* Numbers */
  .numbers {
    padding: var(--space-3xl) 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    position: relative;
    overflow: hidden;
  }
  
  .numbers::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-subtle);
    opacity: 0.5;
  }
  
  .numbers-grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }
  
  .number-item {
    text-align: center;
    padding: var(--space-lg);
    transition: transform var(--transition-base);
  }
  
  .number-item:hover {
    transform: translateY(-4px);
  }
  
  .number {
    display: block;
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    color: var(--color-text);
    line-height: 1;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .number-item .label {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-sm);
  }
  
  .divider {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, transparent, var(--color-border), transparent);
  }
  
  /* Sections */
  .section-header {
    margin-bottom: var(--space-2xl);
  }
  
  .overline {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-md);
  }
  
  .overline::before {
    content: '';
    width: 12px;
    height: 2px;
    background: var(--color-accent);
    border-radius: 2px;
  }
  
  .section-header h2 {
    font-size: var(--text-4xl);
  }
  
  .section-desc {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    margin-top: var(--space-sm);
    max-width: 500px;
  }
  
  /* Work */
  .work {
    padding: var(--space-4xl) 0;
  }
  
  .work-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
  }
  
  .work-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: var(--space-xl);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    min-height: 220px;
    transition: all var(--transition-base);
    overflow: hidden;
  }
  
  .card-glow {
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, var(--color-accent-light) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-slow);
    pointer-events: none;
  }
  
  .work-card:hover .card-glow {
    opacity: 1;
  }
  
  .work-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
  }
  
  .work-card.large {
    grid-row: span 2;
    min-height: 460px;
  }
  
  .card-number {
    position: relative;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-serif);
    z-index: 1;
  }
  
  .card-icon {
    position: relative;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-light);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    margin: var(--space-lg) 0;
    transition: all var(--transition-base);
    z-index: 1;
  }
  
  .work-card:hover .card-icon {
    background: var(--color-accent);
    color: white;
    transform: scale(1.1);
  }
  
  .card-content {
    position: relative;
    z-index: 1;
  }
  
  .card-content h3 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    transition: color var(--transition-fast);
  }
  
  .work-card:hover .card-content h3 {
    color: var(--color-accent);
  }
  
  .card-content p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }
  
  .card-arrow {
    position: absolute;
    top: var(--space-xl);
    right: var(--space-xl);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
    transition: all var(--transition-base);
    z-index: 1;
  }
  
  .work-card:hover .card-arrow {
    background: var(--color-accent);
    color: white;
    transform: translate(4px, -4px);
  }
  
  /* Latest */
  .latest {
    padding: var(--space-4xl) 0;
    background: var(--color-bg-secondary);
    position: relative;
  }
  
  .latest::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }
  
  .posts-list {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--space-xl);
  }
  
  .post-row {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: var(--space-xl);
    align-items: center;
    padding: var(--space-lg) var(--space-md);
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
    transition: all var(--transition-base);
    border-radius: var(--radius-md);
    margin: 0 calc(var(--space-md) * -1);
  }
  
  .post-row:hover {
    background: var(--color-bg-tertiary);
    border-color: transparent;
  }
  
  .post-row:last-child {
    border-bottom: none;
  }
  
  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-serif);
  }
  
  .post-title {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
