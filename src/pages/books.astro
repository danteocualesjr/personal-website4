---
import BaseLayout from '../layouts/BaseLayout.astro';

const ventures = [
  {
    name: "Current Venture",
    description: "Building something big. More details coming soon.",
    role: "Founder & CEO",
    year: "2024—",
    status: "active"
  },
  {
    name: "SecondCo",
    description: "B2B SaaS platform that helped businesses scale. Grew to $5M ARR.",
    role: "Co-Founder",
    year: "2021—24",
    status: "exited"
  },
  {
    name: "FirstStartup",
    description: "Consumer app with 50K+ users. Learned invaluable lessons.",
    role: "Founder",
    year: "2018—21",
    status: "acquired"
  }
];
---

<BaseLayout title="Ventures - Your Name">
  <section class="page-header">
    <div class="container">
      <h1>Ventures</h1>
      <p>Companies I've built from zero.</p>
    </div>
  </section>

  <section class="ventures">
    <div class="container">
      <div class="venture-list">
        {ventures.map((venture) => (
          <div class="venture-item">
            <div class="venture-header">
              <div class="venture-meta">
                <span class="year">{venture.year}</span>
                <span class={`status ${venture.status}`}>{venture.status}</span>
              </div>
            </div>
            <div class="venture-content">
              <h2>{venture.name}</h2>
              <p>{venture.description}</p>
              <span class="role">{venture.role}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <span class="label">Investments</span>
      <p class="investments-note">
        I occasionally invest small checks in early-stage startups building products I believe in. 
        Interested in developer tools, B2B SaaS, and AI. <a href="/about#contact">Get in touch</a> if you're building something.
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-5xl) 0 var(--space-3xl);
  }
  
  .page-header h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
  }
  
  .page-header p {
    font-size: var(--text-lg);
  }
  
  .ventures {
    padding-bottom: var(--space-4xl);
  }
  
  .venture-list {
    max-width: 600px;
  }
  
  .venture-item {
    padding: var(--space-xl) 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .venture-header {
    margin-bottom: var(--space-md);
  }
  
  .venture-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .year {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .status {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 2px 8px;
    border-radius: 2px;
    background: var(--color-surface);
    color: var(--color-text-muted);
  }
  
  .status.active {
    color: #22c55e;
  }
  
  .venture-content h2 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
  }
  
  .venture-content p {
    margin-bottom: var(--space-sm);
  }
  
  .role {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  /* Section */
  .section {
    padding: var(--space-4xl) 0;
    border-top: 1px solid var(--color-border);
  }
  
  .label {
    display: block;
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
  }
  
  .investments-note {
    max-width: 500px;
  }
  
  .investments-note a {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .investments-note a:hover {
    text-decoration: none;
  }
</style>
