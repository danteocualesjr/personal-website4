---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    year: 'numeric'
  });
}
---

<BaseLayout title="Blog - Your Name">
  <section class="page-header">
    <div class="container">
      <h1>Blog</h1>
      <p class="subtitle">Thoughts on building, creating, and life.</p>
    </div>
  </section>

  <section class="posts">
    <div class="container">
      {posts.length === 0 ? (
        <p class="empty">No posts yet. Check back soon.</p>
      ) : (
        <div class="post-list stagger">
          {posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="post-item">
              <div class="post-meta">
                <time>{formatDate(post.data.pubDate)}</time>
                {post.data.tags && post.data.tags[0] && (
                  <span class="tag">{post.data.tags[0]}</span>
                )}
              </div>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
              <span class="read-more">Read article â†’</span>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-4xl) 0 var(--space-2xl);
  }
  
  .page-header h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
    animation: fadeUp var(--duration-slow) var(--ease) forwards;
  }
  
  .subtitle {
    font-size: var(--text-lg);
    animation: fadeUp var(--duration-slow) var(--ease) forwards;
    animation-delay: 0.1s;
    opacity: 0;
  }
  
  .posts {
    padding-bottom: var(--space-5xl);
  }
  
  .empty {
    color: var(--color-text-muted);
    text-align: center;
    padding: var(--space-4xl) 0;
  }
  
  .post-list {
    max-width: var(--content-width);
  }
  
  .post-item {
    display: block;
    padding: var(--space-xl) 0;
    border-bottom: 1px solid var(--color-border);
    transition: all var(--duration) var(--ease);
  }
  
  .post-item:first-child {
    border-top: 1px solid var(--color-border);
  }
  
  .post-item:hover {
    padding-left: var(--space-lg);
  }
  
  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }
  
  .post-meta time {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .tag {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    background: var(--color-surface);
    padding: 3px 8px;
    border-radius: 100px;
  }
  
  .post-item h2 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
    transition: color var(--duration-fast) var(--ease);
  }
  
  .post-item:hover h2 {
    color: var(--color-text-secondary);
  }
  
  .post-item > p {
    font-size: var(--text-base);
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .read-more {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    transition: color var(--duration-fast) var(--ease);
  }
  
  .post-item:hover .read-more {
    color: var(--color-text);
  }
  
  @keyframes fadeUp {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
</style>
